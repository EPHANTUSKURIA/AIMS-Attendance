<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="leaveRequest"
            type="com.example.aimsoftattendance.LeaveRequest" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/leaveType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{leaveRequest.leaveType}"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{leaveRequest.startDate}"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{leaveRequest.endDate}"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{leaveRequest.comments}"
            android:textSize="14sp" />
    </LinearLayout>
</layout>
